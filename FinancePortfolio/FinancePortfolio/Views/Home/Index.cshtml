@{
    ViewData["Title"] = "Home Page";
}

@(Html.Kendo().Splitter()
      .Name("vertical")
      .Orientation(SplitterOrientation.Vertical)
      .HtmlAttributes(new { style = "width: 100%;" })
      .Panes(verticalPanes =>
      {
          verticalPanes.Add()
                  .HtmlAttributes(new { id = "top-pane" })
                  .Scrollable(false)
                  .Collapsible(false)
                  .Size("50%")
                  .LoadContentFrom("GetTopPaneContent", "Home");

          verticalPanes.Add()
                .HtmlAttributes(new { id = "bottom-pane" })
                .Scrollable(false)
                .Collapsible(false)
                .MinSize("300px")
                .Size("50%")
                .LoadContentFrom("GetBottomPaneContent", "Home");
            })
)

<style>
    html, body, .container , main, #vertical{
        height:100%;
    }

    .container {
        max-width: none;
        padding: 0px;
    }

    #top-pane {
        background-color: #FFF;
    }
</style>