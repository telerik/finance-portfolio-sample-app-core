@{
    ViewData["Title"] = "Home Page";
}

@(Html.Kendo().Splitter()
      .Name("vertical")
      .Orientation(SplitterOrientation.Vertical)
      .HtmlAttributes(new { style = "width: 100%; height: 1600px;" })
      .Panes(verticalPanes =>
      {
          verticalPanes.Add()
                  .HtmlAttributes(new { id = "top-pane" })
                  .Scrollable(false)
                  .Collapsible(false)
                  .Size("30%")
                  .LoadContentFrom("GetTopPaneContent", "Home");

          verticalPanes.Add()
                .HtmlAttributes(new { id = "bottom-pane" })
                .Scrollable(false)
                .Collapsible(false)
                .MinSize("300px")
                .Size("70%")
                .LoadContentFrom("GetBottomPaneContent", "Home");
            })
)

<style>
    html, body, .container , main, #vertical{
        height:100%;
    }

    #top-pane {
        background-color: #FFF;
    }

    #removeButton {
        visibility: hidden;
    }
</style>

<script>
    function onDataBound(e) {
        $("#Grid tr.k-alt").removeClass("k-alt");
        var intradayCollection = [];
        var data = this.dataSource.view();
        $(data).each(function () {
            intradayCollection.push(this.Intraday)
        })

        $('.chart').each(function (i) {
            var chart = $(this);
            var item = data[i];
            var color = item.ChangePct > 0 ? "green" : "red"; 

            chart.kendoChart({
                chartArea: {
                    background: "transparent",
                    opacity: 0.2
                },
                legend: {
                    visible: false
                },
                seriesDefaults: {
                    type: "area",
                    labels: {
                        visible: false,
                        background: "transparent"
                    }
                },
                series: [{
                    type: "area",
                    data: intradayCollection[i],
                    markers: {
                        visible: false
                    },
                    color: color,
                    opacity: 0.2
                },
                    {
                    type: "line",
                    data: intradayCollection[i],
                    markers: {
                        visible: false
                    },
                    color: color
                }],
                valueAxis: {
                    line: {
                        visible: false
                    },
                    majorGridLines: {
                        visible: false
                    },
                    labels: {
                        visible: false,
                    }
                },
                categoryAxis: {
                    line: {
                        visible: false
                    },
                    majorGridLines: {
                        visible: false,
                    }
                },
                tooltip: {
                    visible: true
                }
            });
        });

    }

    function removeRow() {
        var grid = $("#Grid").data("kendoGrid");
        var selectedItem = grid.dataItem(grid.select());
        grid.dataSource.remove(selectedItem)

        $("#addNew").data("kendoDropDownList").dataSource.data().unshift(selectedItem);
        $("#addNew").data("kendoDropDownList").dataSource.data()
        $("#removeButton").css("visibility", "hidden");

    }

    function addStock(e) {
        var grid = $("#Grid").data("kendoGrid");
        if (e.sender.select() != -1) {
            var item = e.sender.dataSource.data()[e.sender.select()].toJSON();
            e.sender.dataSource.remove(e.sender.dataSource.data()[e.sender.select()]);
            grid.dataSource.insert(item, 0);
        }
    }

</script>