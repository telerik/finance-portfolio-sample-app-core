<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FinancePortfolio</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">  
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2022.1.119/styles/kendo.bootstrap-main.min.css" />

    <script src="~/js/signalr.js"></script>
    <script src="https://kendo.cdn.telerik.com/2022.1.119/js/jquery.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2022.1.119/js/jszip.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2022.1.119/js/kendo.all.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2022.1.119/js/kendo.aspnetmvc.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2022.1.119/js/cultures/kendo.culture.en-US.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg py-3 header">
            <div class="container d-flex justify-content-between">
                <div>
                    <h1 class="mb-0 header-title">My Stocks Portfolio</h1>
                    <div class="d-flex flex-wrap justify-content-between align-items-center">

                        <script>
                            kendo.culture("en-US");
                        </script>
                        @(Html.Kendo().DropDownList()
                                  .Name("currency")
                                  .DataTextField("Text")
                                  .DataValueField("Value")
                                  .BindTo(new List<SelectListItem>() {
                                      new SelectListItem() {
                                          Text = "USD",
                                          Value = "1"
                                      },
                                      new SelectListItem() {
                                          Text = "EUR",
                                          Value = "2"
                                      },
                                      new SelectListItem() {
                                          Text = "GBP",
                                          Value = "3"
                                      }
                                  })
                                  .Events(ev => ev.Change("onCurrencyChange"))
                                  .Value("1")
                                  .ValueTemplate("<span>Currency in #= data.Text #</span>") 
                                  .HtmlAttributes(new { style = "width: 50%" })
                    )

                        <a href="https://github.com/telerik/finance-portfolio-sample-app-core" target="_blank" class="source-code-link profile-text d-flex align-items-center">
                            <svg class="navbar-nav-svg mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" focusable="false"><title>GitHub</title><path d="M256 0C114.64 0 0 114.61 0 256c0 113.09 73.34 209 175.08 242.9 12.8 2.35 17.47-5.56 17.47-12.34 0-6.08-.22-22.18-.35-43.54-71.2 15.49-86.2-34.34-86.2-34.34-11.64-29.57-28.42-37.45-28.42-37.45-23.27-15.84 1.73-15.55 1.73-15.55 25.69 1.81 39.21 26.38 39.21 26.38 22.84 39.12 59.92 27.82 74.5 21.27 2.33-16.54 8.94-27.82 16.25-34.22-56.84-6.43-116.6-28.43-116.6-126.49 0-27.95 10-50.8 26.35-68.69-2.63-6.48-11.42-32.5 2.51-67.75 0 0 21.49-6.88 70.4 26.24a242.65 242.65 0 0 1 128.18 0c48.87-33.13 70.33-26.24 70.33-26.24 14 35.25 5.18 61.27 2.55 67.75 16.41 17.9 26.31 40.75 26.31 68.69 0 98.35-59.85 120-116.88 126.32 9.19 7.9 17.38 23.53 17.38 47.41 0 34.22-.31 61.83-.31 70.23 0 6.85 4.61 14.81 17.6 12.31C438.72 464.97 512 369.08 512 256.02 512 114.62 397.37 0 256 0z" fill="currentColor" fill-rule="evenodd"></path></svg>
                            Source Code
                        </a>
                    </div>
                </div>

                <a href="~/Home/Profile">
                    <div class="profile-wrapper d-flex flex-column align-self-center" routerLink="/profile">
                        <div class="profile-image"></div>
                        <div class="profile-text">Collin Johnson</div>
                    </div>
                </a>
            </div>
        </nav>
    </header>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    <footer class="container-fluid footer text-center d-flex align-items-center">
        <div class="w-100">
            <span class="footer-copyright text-center">Copyright © @DateTime.Now.Year Progress Software Corporation and/or its subsidiaries or affiliates.</span>
            <span class="progress-logo d-inline-flex"></span>
        </div>
    </footer>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
<script>
    $(document).ready(function () {
        $(".k-icon.k-i-arrow-60-down").addClass("k-i-arrow-chevron-down");
        $(".k-icon.k-i-arrow-60-down").removeClass("k-i-arrow-60-down");
    })
</script>
</html>
